import random


def repeated_letters(word):
    positions = {}
    for i, letter in enumerate(word):
        if letter in positions:
            positions[letter].append(i)
        else:
            positions[letter] = [i]
    return positions


WORDS = ['vENOM', 'windy',	'donut', 'cower', 'enter', 'folly' ]
word_input = random.choice(WORDS).upper()


actualWord = "_____"
actualWordList = list(actualWord)
count = 0
repeated_letters = repeated_letters(word_input)


while count<6:
    while True:
        guess = input("Enter a 5 letter word: ")
        if(len(guess)==5):
            break
        else:
            continue
    guess_list = list(guess)
    word_list = list(word_input)
    for i in range(5):
        if(guess_list[i].upper() == word_list[i].upper()):
            actualWordList[i]=guess_list[i]
        elif(guess_list[i].upper() in word_input.upper()):
            if i in repeated_letters.get(guess_list[i].upper(), []):
                print(guess_list[i] + " is in the word, and it occurs multiple times.")
            else:
                print(guess_list[i] + " is in the word, but in a different spot")
    actualWord = ''.join(actualWordList)
    print(actualWord)
    if(guess.upper() == word_input.upper()):
        print("Congrats! It took you "+ str(count)+" tries!")
        break
    count+=1

if(count ==6):
    print("Ran out of tries. The word was " + word_input)
    


